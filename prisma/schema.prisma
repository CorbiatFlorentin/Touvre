generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum EventType {
  MICHOUI
  VIDE_GRENIER
}

model Inscription {
  id              Int      @id @default(autoincrement())
  nom             String
  email           String
  event           EventType
  accompteVerser  Boolean  @default(false) @map("accompte_verser")
  accompteMontant Int?
  createdAt       DateTime @default(now())

  @@index([event])
  @@map("inscription")
}